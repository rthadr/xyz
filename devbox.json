{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": [
    "nodejs-slim@23",
    "glibc@2.35",
    "bun@latest"
  ],
  "env": {
    "DEVBOX_COREPACK_ENABLED": "false"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "dev": [
        "bun run dev"
      ],
      "deploy": [
        "bun run deloy"
      ]
    }
  }
}
